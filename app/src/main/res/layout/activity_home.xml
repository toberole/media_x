<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".activity.HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_OpenGLActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenGLES" />

        <Button
            android:id="@+id/btn_FilterActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FilterActivity" />

        <Button
            android:id="@+id/btn_TestVideoPlayerActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TestVideoPlayerActivity" />

        <Button
            android:id="@+id/btn_MediaRecorderActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MediaRecorderActivity" />

        <Button
            android:id="@+id/btn_H264Activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="H264Activity" />


    </LinearLayout>

</ScrollView>